<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:id="@+id/layout_signup">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_signup1"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:weightSum="1">

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/nametext"
            android:text="Name:"
            android:textSize="30dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/nameedit"
            android:textSize="20sp"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_signup2"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/usernametext"
            android:text="Username:"
            android:textSize="30dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/usernameedit"
            android:textSize="20sp"
            android:inputType="text"
            android:layout_gravity="right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_signup3"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/passwordtext"
            android:text="Password:"
            android:textSize="30dp"
            android:layout_marginBottom="0.4dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/passwordedit"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:layout_marginBottom="0.6dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_signup4"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/confirmtext"
            android:text="Confirm:    "
            android:textSize="30dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/confrimedit"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:gravity="right"
            android:layout_gravity="right" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_signup5"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:id="@+id/gendertext"
            android:text="Gender:      "
            android:textSize="30dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/male"
                android:layout_gravity="right" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/female"
                android:checked="false" />
        </RadioGroup>

    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:id="@+id/signup"
        android:layout_gravity="center_horizontal" />


</LinearLayout>